<p id="notice"><%= notice %></p>

<h1>Movies</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th>Description</th>
      <th>Duration</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <%= render "form", movie: Movie.new %>
    </tr>
  </tbody>    

  <tbody id ="movies">
    <% @movies.each do |movie| %>
      <%= render "movie", movie: movie %>
    <% end %>
  </tbody>
</table>
